{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug cpp",
      "type": "cppdbg",
      "request": "launch",
      "cwd": "${fileDirname}",
      "preLaunchTask": "build active cpp solution",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": ["<", "input.text"],
      "logging": {
        "exceptions": true,
        "moduleLoad": true,
        "programOutput": true
      }
    }
  ]
}
